@media screen and (min-width:768px)
	body
		margin 0 auto
		max-width 98%

	header #logo
		box-shadow 0px 0px 7px 0px rgba(0,0,0,0.8)
		height 240px

	#navegador #logo
		box-shadow none
		margin 0.2em
		width 40%

	#contenedor h2
		font-size 1.4em

	#contenedor #izquierda
		padding 0.4em 0.7em
		vertical-align top
		width 78%

		#directo
			width 90%

			#tg7
				height 340px
				width 100%
	 		

		#convocatorias
			float left
			width 47%


			h2
				box-shadow 5px 10px 7px rgba(0,0,0,0.5)
				border-radius 20%

		#noticias, #calendario, #galeria
			width 47%

		#noticias
			float right


			h2
				border-radius 20%
				box-shadow 5px 10px 7px rgba(0,0,0,0.5)

		#galeria
			float right

			.slider div.images
				width 100%


			h2
				border-radius 20%
				box-shadow 5px 10px 7px rgba(0,0,0,0.5)

		#calendario
			float left


			h2
				border-radius 20%
				box-shadow 5px 10px 7px rgba(0,0,0,0.5)

		#cronicas
			width 60%


			h2
				border-radius 20%
				box-shadow 5px 10px 7px rgba(0,0,0,0.5)
				text-align center

		#directo
			width 60%

			h2
				border-radius 20%
				box-shadow 5px 10px 7px rgba(0,0,0,0.5)
				text-align center

	#contenedor	#lateral
		float right
		width 21%

	#contenedor	#lateral #botones 
		display inline-block
		padding 0.3em
		width 100%

	#contenedor	#lateral #botones #avata
		display inline-block
		position relative

	#contenedor	#lateral #botones #li
		background #ccd
		width 100%

	#contenedor	#lateral #botones #sub-botones
		font-size 1.4em
		text-align left

	#contenedor	#lateral #botones #sub-botones a:hover
		background #cca
		color yellow
		transition 3s
		text-shadow: 	0px 0px 3px rgba(0,255,0,1), 
						0px 0px 3px rgba(0,255,0,1), 
						0px 0px 3px rgba(0,255,0,1),
						0px 0px 3px rgba(0,255,0,1),
						0px 0px 3px rgba(0,255,0,1), 
						0px 0px 3px rgba(0,255,0,1), 
						0px 0px 3px rgba(0,255,0,1),
						0px 0px 3px rgba(0,255,0,1);

	#contenedor #lateral #redes #text
		font-size 0.7em

	#contenedor #lateral #facebook
		margin-top 1em
		width 80%

	#contenedor #lateral #facebook #fbok
		width 94%

	#contenedor #lateral #twitter
		display inline-block
		margin 1em
		width 90%

		#chat
			box-shadow 0px 0px 0px 3px rgba(0,0,0,0.3)
			width 90%

	#contenedor #lateral #redes .sociales
		display inline-block
		padding 0.5em
		margin-top 0.4em
		vertical-align top
		width 22%

	#contenedor #lateral #redes .punto
		display inline-block
		padding 0.5em
		margin-top 0.4em
		vertical-align top
		width 15%

	#contenedor #lateral #boletin
		display inline-block
		margin-top 1em
		text-align center

	#contenedor #lateral #boletin a 
		display none

	#contenedor #lateral #boletin .formulario
		display inline-block
		margin-top -1em
