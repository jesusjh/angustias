@media screen and (min-width:768px)
	body
		margin 0 auto
		max-width 98%

	#contenedor h2
		font-size 1.4em

	#contenedor #izquierda
		padding 0.4em 0.5em
		vertical-align top
		width 60%

		#convocatorias
			width 45%

		#noticias, #calendario, #galeria
			width 45%

		#cronicas
			width 100%

	#contenedor	#lateral #nav 
			list-style-type none
		    margin 0px
		    padding 0px

	#contenedor	#lateral #nav
		padding 0.3em

	#contenedor	#lateral #nav ul
		background-color #666
		display inline-block
		padding 0.6em
		width 60%

	#contenedor	#lateral #nav ul a 
		color #ccc
		font-size 1.0em
	    text-decoration none
	    text-transform uppercase
	    text-align left
	    display inline-block
	    padding 10px 10px 10px 20px

	#contenedor	#lateral #nav ul a:hover
		background #000
		border-left 10px solid #333
		color #fff
		display inline-block
		text-transform-right 1s
	